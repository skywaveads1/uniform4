{
  "name": "uniform-blog",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.7"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate-sitemap": "node src/scripts/generate-sitemap.js",
    "verify-blog-dirs": "node src/scripts/verify-blog-directories.js",
    "prebuild": "npm run generate-sitemap && npm run verify-blog-dirs",
    "postbuild": "npm run optimize-images && npm run minify",
    "optimize-images": "node optimize-images-advanced.js",
    "minify": "node minify-assets.js",
    "clean": "rimraf .next out",
    "netlify-deploy": "npm ci && npm run clean && npm run generate-sitemap && npm run verify-blog-dirs && cross-env NODE_ENV=production NEXT_PUBLIC_SITE_URL=https://esaudi.info next build && node copy-static.js && cp -r out/_next out/blog/ && cp -r out/_next out/terms/ && cp -r out/_next out/privacy/ && cp -r out/_next out/about/ && cp -r out/_next out/contact/ && cp -r out/_next out/faq/ && cp -r out/_next out/quote/ && cp out/404.html out/blog/404.html",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@netlify/plugin-nextjs": "^5.11.1",
    "@next/bundle-analyzer": "^14.2.28",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "critters": "^0.0.23",
    "cross-env": "^7.0.3",
    "glob": "^11.0.2",
    "lucide-react": "^0.503.0",
    "next": "^14.1.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.16.0",
    "swiper": "^11.2.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "clean-css": "^5.3.3",
    "sharp": "^0.34.1",
    "terser": "^5.39.1",
    "rimraf": "^5.0.10"
  },
  "devDependencies": {
    "eslint": "9.26.0",
    "eslint-config-next": "15.3.2",
    "netlify-plugin-submit-sitemap": "^0.4.0"
  }
}
